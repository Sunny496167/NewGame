# Environment Variables Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/game-db

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
# Generate secure secrets using: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_ACCESS_SECRET=your_super_secret_access_token_key_change_this_in_production
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key_change_this_in_production
JWT_EMAIL_SECRET=your_super_secret_email_verification_key_change_this_in_production
JWT_RESET_SECRET=your_super_secret_password_reset_key_change_this_in_production

# JWT Expiry Times
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (for production)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password
# EMAIL_FROM=noreply@yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCK_TIME=7200000

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000
